{
  "rules": {
    "users": {
      ".read": true,
      ".write": true,
      "$userId": {
        ".validate": "newData.hasChildren(['timestamp']) && newData.child('timestamp').isString()"
      }
    },
    "players": {
      ".read": true,
      ".write": true,
      "$playerId": {
        ".validate": "newData.hasChildren(['startTime']) && newData.child('startTime').isNumber()"
      }
    },
    "counters": {
      ".read": true,
      ".write": true,
      "players": {
        ".validate": "newData.isNumber()"
      }
    },
    "stats": {
      ".read": true,
      ".write": true,
      ".validate": "newData.hasChildren(['lastUpdated']) && newData.child('lastUpdated').isString()"
    }
  }
}